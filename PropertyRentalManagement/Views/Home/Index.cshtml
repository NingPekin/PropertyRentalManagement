@{
    ViewBag.Title = "Index";
}

<h2></h2>
<div class="jumbotron jumbotron bg-cover specialjum">
    <div class="overlay"></div>
    <div class="container">
        <h1 class="display-3 mb-2">Find your sweet home</h1>
        <br /><br />
        <p class="lead">We take care of <span>EVERYTHING</span> for you</p> 
    </div>
</div>


<div class="card card-body" style="margin-bottom:70px">
    <h4 class="card-title">Our Apartments</h4>
    <p class="card-text">We provide the best service and the best products to our dearest clients</p>
    <a href="#demo" class="btn btn-primary">Show apartments</a>
</div>



<div id="demo" class="carousel slide" data-ride="carousel">

    <!-- Indicators -->
    <ul class="carousel-indicators">
        <li data-target="#demo" data-slide-to="0" class="active"></li>
        <li data-target="#demo" data-slide-to="1"></li>
        <li data-target="#demo" data-slide-to="2"></li>
        <li data-target="#demo" data-slide-to="3"></li>
    </ul>



    <!-- The slideshow -->
    <div class="carousel-inner">
        <div class="carousel-item active">
            <img src="~/Img/img1.jpg" alt="img1" width="1100" height="500">
        </div>
        <div class="carousel-item">
            <img src="~/Img/img2.jpg" alt="img2" width="1100" height="500">
        </div>
        <div class="carousel-item">
            <img src="~/Img/img3.jpg" alt="img3" width="1100" height="500">
        </div>
        <div class="carousel-item">
            <img src="~/Img/img4.jpg" alt="img4" width="1100" height="500">
        </div>
    </div>

    <!-- Left and right controls -->
    <a class="carousel-control-prev" href="#demo" data-slide="prev">
        <span class="carousel-control-prev-icon"></span>
    </a>
    <a class="carousel-control-next" href="#demo" data-slide="next">
        <span class="carousel-control-next-icon"></span>
    </a>
</div>

